<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainView.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorTitle"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">
        </android.support.v7.widget.Toolbar>
        <com.wpy.circleviewpager.widget.CycleView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:scaleType="centerCrop"
            app:myshape="oval"
            app:myselected_color="@color/colorPointSelected"
            app:myunselected_color="@color/colorPointUnselected">
        </com.wpy.circleviewpager.widget.CycleView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSplitLine">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="我的歌单"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSplitLine">
            </View>
            <LinearLayout
                android:id="@+id/my_music_list"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/list_icon1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:text="我喜欢的音乐"
                    android:textSize="20sp"
                    android:textAppearance="@style/ThemeOverlay.AppCompat.Dark"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSplitLine">
            </View>
            <LinearLayout
                android:id="@+id/recommend_list"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="5dp"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/list_icon2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginStart="3dp"
                    android:text="歌单推荐"
                    android:textSize="20sp"
                    android:textAppearance="@style/ThemeOverlay.AppCompat.Dark"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSplitLine">
            </View>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/drawer_head"
        app:menu="@menu/drawer_menu" />
</android.support.v4.widget.DrawerLayout>