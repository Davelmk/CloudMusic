<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayView.MusicPlayActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar_play"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSplitLine">
    </View>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <ImageView
            android:id="@+id/image_dic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="50dp" />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/play_needle"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/needle" />
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSplitLine">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/last_song"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/last_play"/>
        <ImageView
            android:id="@+id/play"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/stop_play"/>

        <ImageView
            android:id="@+id/next_song"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/next_song"/>
    </LinearLayout>
</LinearLayout>